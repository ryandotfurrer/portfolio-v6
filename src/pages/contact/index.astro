---
import { Github, Globe, Linkedin, Twitter } from 'lucide-react';
import Link from '~/components/Link.astro';
import Signature from '~/components/Signature.astro';
import { SocialLinks } from '~/utils/utils';
import CalEmbed from '../../components/react/CalEmbed.jsx';
import BaseLayout from '../../layouts/BaseLayout.astro';
import EventGreeting from '../../components/react/EventGreeting.tsx';
import { Image } from 'astro:assets';
import ryanPfp from './pfp-square.jpg';
---

<BaseLayout pageTitle="contact" pageDescription="tweet, email, or book a call">
  <main class="space-y-12">
    <section class="space-y-4 text-lg">
      <div class="flex flex-col items-center gap-4 md:flex-row">
        <EventGreeting client:load additionalClasses="block md:hidden" />
        <Image
          src={ryanPfp}
          alt="A picture of Ryan, a bearded person wearing glasses and a black cap with an Astro logo, dressed in a dark hoodie, standing against a solid light green background. They are looking slightly to the side with a neutral expression."
          class="w-full rounded-md md:w-1/3 lg:w-1/4"
        />
        <EventGreeting client:load additionalClasses="md:block hidden" />
      </div>
      <p>
        I'd love to hear from you so feel free to reach out to me via social
        media, email, or book a call via Cal below.
      </p>
      <p>
        I'm most active on <Link externalLink href={SocialLinks.x.href}
          >X/Twitter</Link
        > these days, but you can reach find me everywhere via <Link
          externalLink
          href={SocialLinks.bento.href}>Bento</Link
        >. Or you can email me at <Link href="mailto:ryan@ryandotfurrer.com"
          >ryan@ryandotfurrer.com</Link
        >
      </p>
    </section>
    <aside
      class="dark:bg-background flex w-fit items-center rounded-sm border border-emerald-500 bg-white"
    >
      <span
        class="mb-0 rounded-sm border border-transparent bg-emerald-200/20 p-2 font-sans text-xs leading-none font-semibold tracking-normal text-emerald-700 md:text-sm dark:bg-emerald-800/50 dark:text-emerald-500"
        >looking for work</span
      >
    </aside>
    <div>
      <p class="mb-2 font-semibold uppercase">socials</p>
      <ul class="mb-4 flex flex-col gap-2">
        <li>
          <Link
            externalLink
            href={SocialLinks.x.href}
            class="group flex w-fit items-center"
            ><Twitter
              className="group-hover:text-foreground size-5"
            />twitter</Link
          >
        </li>
        <li>
          <Link
            externalLink
            href={SocialLinks.github.href}
            class="group flex w-fit items-center"
            ><Github
              className="group-hover:text-foreground size-5"
            />github</Link
          >
        </li>
        <li>
          <Link
            externalLink
            href={SocialLinks.linkedin.href}
            class="group flex w-fit items-center"
            ><Linkedin
              className="group-hover:text-foreground size-5"
            />linkedIn</Link
          >
        </li>
        <li>
          <Link
            externalLink
            href={SocialLinks.bento.href}
            class="group flex w-fit items-center"
            ><Globe className="group-hover:text-foreground size-5" />bento</Link
          >
        </li>
      </ul>
    </div>
    <Signature />
    <CalEmbed client:load />
  </main>
</BaseLayout>
