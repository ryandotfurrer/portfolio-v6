---
import Heading from './Heading.astro';
import Link from './Link.astro';

interface Props {
  pageTitle: string;
  pageDescription?: string;
  hasCTA?: boolean;
  class?: string;
}

const { pageTitle, pageDescription, hasCTA = false, class: className = '' } = Astro.props;
const currentPath = Astro.url.pathname;
---

<div
  class:list={[
    'pt-16 md:pt-24 lg:pt-28 xl:pt-32',
    className
  ]}
>
  <Heading level="h2" size="3xl" class="">
    {pageTitle}
  </Heading>
  <p class="font-sans text-xl text-balance">
    {pageDescription}
  </p>
  {
    hasCTA && (
      <div class="mt-6 flex gap-4 flex-col md:flex-row">
        <Link href="/contact" variant="primary" size="button">
          Contact Me
        </Link>

        <Link href="/projects" variant="outline" size="button">
          View projects
        </Link>
      </div>
    )
  }
</div>
