---
import Heading from './Heading.astro';
import Link from './Link.astro';
import NewsletterKitForm from './NewsletterKitForm.astro';
import Logo from '~/images/new logo.svg?url';
---

<aside
  class="group bg-secondary rounded-lg space-y-8 px-4 py-12 md:py-24 grid grid-cols-1 md:grid-cols-2 gap-8 md:items-center"
>
  <div class="flex flex-col gap-4">
    <hgroup>
      <Heading level="h2" size="3xl" class="mb-0"> newsletter </Heading>
      <p>Subscribe to my newsletter to get the latest updates and news.</p>
    </hgroup>
    <NewsletterKitForm />
  </div>
  <img src={Logo} alt="" class="w-full h-full" />
</aside>
