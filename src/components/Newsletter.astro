---
import Heading from './Heading.astro';
import Link from './Link.astro';
import NewsletterBeehiivForm from './NewsletterBeehiivForm.astro';
import Logo from '~/images/new logo.svg?url';
---

<div class="bg-white max-w-screen-lg rounded-lg mx-auto">
    <div
    class='group bg-gradient-to-r from-orange-500/10 to-red-500/20 border mx-auto grid grid-cols-1 gap-8 rounded-lg p-4 md:grid-cols-2 md:items-center md:p-8 lg:p-12 border-orange-300'
    >
    <div class='flex flex-col gap-y-8 '>
        <hgroup>
        <Heading
            level='h2'
            size='3xl'
            class='mb-0 dark:text-background'
        >
            newsletter
        </Heading>
        <p class='text-muted-foreground dark:text-zinc-600'>
            Subscribe to my newsletter to get notified of when I publish new
            articles, find cool things on the web, and more!
        </p>
        </hgroup>
        <NewsletterBeehiivForm />
    </div>
    <img
        src={Logo}
        alt=''
        class='hidden h-full w-full md:block'
    />
    </div>
</div>
