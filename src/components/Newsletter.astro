---
import Heading from './Heading.astro';
import Logo from '~/images/new logo.svg?url';
import NewsletterBeehiivForm from './NewsletterBeehiivForm.astro';
---

<div class="dark:bg-background mx-auto max-w-screen-lg rounded-lg bg-white">
  <div
    class="group border-accent/50 dark:bg-accent/20 mx-auto grid grid-cols-1 gap-8 rounded-lg border bg-gradient-to-r from-orange-500/10 to-red-500/20 p-4 md:grid-cols-2 md:items-center md:p-8 lg:p-12"
  >
    <div class="flex flex-col gap-y-8">
      <hgroup>
        <Heading level="h2" size="3xl" class="mb-0"> newsletter </Heading>
        <p class="text-foreground-muted dark:text-foreground">
          Subscribe to my newsletter to get notified of when I publish new
          articles, find cool things on the web, and more!
        </p>
      </hgroup>
      <NewsletterBeehiivForm />
    </div>
    <img src={Logo} alt="" class="hidden h-full w-full md:block" />
  </div>
</div>
