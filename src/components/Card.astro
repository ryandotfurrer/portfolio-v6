---
import { cn } from '../utils/utils';
import Link from './Link.astro';

export interface CardProps {
  class?: string;
  href?: string;
  variant?: 'default' | 'transparent';
}

const { class: className, href, variant = 'default' } = Astro.props;

const defaultClasses =
  'rounded-lg border border-border p-4 bg-card break-words space-y-4 hover:drop-shadow-md transition-all hover:-translate-y-1';
const transparentClasses =
  'rounded-lg border border-none break-words space-y-4';
const cardClasses =
  variant === 'transparent' ? transparentClasses : defaultClasses;
---

{
  href ? (
    <div class="group">
      <Link href={href} class="block group/link">
        <div class={cn(cardClasses, className)}>
          <slot />
        </div>
      </Link>
    </div>
  ) : (
    <div class={cn(cardClasses, className)}>
      <slot />
    </div>
  )
}

<style>
  a {
    text-decoration: none;
    color: inherit;
  }
</style>
