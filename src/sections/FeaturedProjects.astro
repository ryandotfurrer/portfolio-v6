---
import { getCollection } from 'astro:content';
import Card from '../components/Card.astro';
import Heading from '../components/Heading.astro';
import Link from '../components/Link.astro';
import FormattedDate from '~/components/FormattedDate.astro';
import Tag from '~/components/Tag.astro';
const projectCollection = await getCollection('projects');
const featuredProjects = projectCollection.slice(-2).reverse();

const currentPath = Astro.url.pathname;
---

<section id="featured-projects" class="space-y-8">
  <Heading level="h2" size="3xl">featured projects</Heading>

  <div class="grid grid-cols-1 md:grid-cols-2 gap-y-16 md:gap-y-0 md:gap-x-8">
    {
      featuredProjects.map((project) => (
        <Card class="group" key={project.id} variant="transparent" hasLink={true} href={`/projects/${project.id}`}>
          <header>
            <Heading
              level="h3"
              size="2xl"
              class="group-hover:text-accent transition-all"
          >
              {project.data.title}
            </Heading>
            <FormattedDate
              classes="text-sm"
              date={project.data.pubDate ?? new Date()}
            />
          </header>
          <div class="w-full my-2">
            <img
              src={project.data.heroImage}
              alt={project.data.title}
              class="rounded-md border border-border aspect-video"
            />
          </div>
          <p class="line-clamp-2">{project.data.description}</p>
          {project.data.tags && project.data.tags.length > 0 && (
            <div class="mt-2">
              <ul class="flex flex-wrap gap-2">
                {project.data.tags.map((tag) => (
                  <Tag key={tag} name={tag}>
                    {tag}
                  </Tag>
                ))}
              </ul>
            </div>
          )}
          <div class="flex flex-col md:flex-row md:justify-start">
            <Link
              href={`/projects/${project.id}`}
              variant="primary"
              size="button"
              class="w-full md:w-auto mb-4 md:mb-0 md:mr-4"
            >
              See more
            </Link>
            <Link
              href={project.data.links?.github || ''}
              externalLink={true}
              variant="outline"
              size="button"
              class="w-full md:w-auto"
            >
              View GitHub
            </Link>
          </div>
        </Card>
      ))
    }
  </div>
  {
    currentPath === '/' && (
      <Link
        href="/projects"
        withIcon={true}
        class="text-foreground-muted group-hover:text-foreground text-lg"
      >
        view all projects
      </Link>
    )
  }
</section>
